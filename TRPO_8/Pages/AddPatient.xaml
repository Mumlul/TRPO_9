<Page x:Class="TRPO_8.Pages.AddPatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPatient">

    <Grid>
        <Border Grid.Row="1" Grid.Column="2" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Пациент" FontWeight="Bold" 
           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <StackPanel Grid.Row="1" MaxHeight="300">
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Фамилия" Width="100" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding LastName,UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                    </DockPanel>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Имя" Width="100" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding Name,UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                    </DockPanel>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Отчество" Width="100" Margin="0,0,5,0"/>
                        <TextBox Text="{Binding MiddleName,UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                    </DockPanel>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Дата рождения" Width="100" Margin="0,0,5,0"/>
                        <DatePicker SelectedDate="{Binding Birthday,UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                    </DockPanel>
                    <Button Content="Сохранить" Click="AddPatient_Click" Margin="0,10,0,0" Height="30"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
