<Page x:Class="TRPO_8.Pages.AddPatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:validarions="clr-namespace:TRPO_8.ValidationRules"
      xmlns:local="clr-namespace:TRPO_8.Pages"
      mc:Ignorable="d" 
      Title="AddPatient"
      Background="{DynamicResource WindowBackgroundBrush}">

    <Grid>
        <Border Style="{StaticResource FormBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Пациент"
                           Style="{StaticResource FormHeader}"/>

                <StackPanel Grid.Row="1"
                            Style="{StaticResource FormStackPanel}">

                    <DockPanel Style="{StaticResource FormFieldPanel}">
                        <TextBlock Text="Фамилия" Style="{StaticResource FormLabel}"/>
                        
                        <StackPanel Style="{StaticResource Vertical}">
                            <TextBox x:Name="Surname" Style="{StaticResource FormTextBox}">
                                <TextBox.Text>
                                    <Binding Path="LastName">
                                        <Binding.ValidationRules>
                                            <validarions:TextRules/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <ItemsControl ItemsSource="{Binding ElementName=Surname,Path=(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource ErrorMessage}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DockPanel>

                    <DockPanel Style="{StaticResource FormFieldPanel}">
                        <TextBlock Text="Имя" Style="{StaticResource FormLabel}"/>
                        
                        <StackPanel Style="{StaticResource Vertical}">
                            <TextBox x:Name="Name" Style="{StaticResource FormTextBox}">
                                <TextBox.Text>
                                    <Binding Path="Name">
                                        <Binding.ValidationRules>
                                            <validarions:TextRules/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <ItemsControl ItemsSource="{Binding ElementName=Name,Path=(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource ErrorMessage}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DockPanel>

                    <DockPanel Style="{StaticResource FormFieldPanel}">
                        <TextBlock Text="Отчество" Style="{StaticResource FormLabel}"/>
                        
                        <StackPanel Style="{StaticResource Vertical}">
                            <TextBox x:Name="MiddleName" Style="{StaticResource FormTextBox}">
                                <TextBox.Text>
                                    <Binding Path="MiddleName">
                                        <Binding.ValidationRules>
                                            <validarions:TextRules/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <ItemsControl ItemsSource="{Binding ElementName=MiddleName,Path=(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource ErrorMessage}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DockPanel>

                    <DockPanel Style="{StaticResource FormFieldPanel}">
                        <TextBlock Text="Дата рождения" Style="{StaticResource FormLabel}"/>
                        
                        <StackPanel Style="{StaticResource Vertical}">
                            <DatePicker x:Name="Birthday" Style="{StaticResource FormDatePicker}">
                                <DatePicker.SelectedDate>
                                    <Binding Path="Birthday">
                                        <Binding.ValidationRules>
                                            <validarions:DataRules/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </DatePicker.SelectedDate>
                            </DatePicker>
                            <ItemsControl ItemsSource="{Binding ElementName=Birthday,Path=(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" Style="{StaticResource ErrorMessage}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DockPanel>
                    <Button Click="AddPatient_Click"
                            Style="{StaticResource SaveButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>