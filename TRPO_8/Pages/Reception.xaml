<Page x:Class="TRPO_8.Pages.Reception"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TRPO_8.Pages"
      mc:Ignorable="d"
      Title="Reception" Height="600" Width="800">
    <Grid>
        <Border  Margin="5,0,5,10" Grid.Column="1" Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Name="data"  Grid.Row="0">
                    <TextBlock  Text="Прием" FontWeight="Bold" 
                        HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock  Text="{Binding ID}"/>
                </StackPanel>
                
                

                <StackPanel Grid.Row="1" MaxHeight="400">

                    <DockPanel Margin="0,5">
                        <TextBlock Text="Фамилия" Width="120" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding LastName}" MouseDown="Edit_patient" Height="25"/>
                    </DockPanel>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Имя" Width="120" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Name}" Height="25"/>
                    </DockPanel>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Отчество" Width="120" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding MiddleName}" Height="25"/>
                    </DockPanel>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Дата рождения" Width="120" Margin="0,0,5,0"/>
                        <DatePicker SelectedDate="{Binding Birthday}" Height="25"/>
                    </DockPanel>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Диагноз" Width="120" Margin="0,0,5,0"/>
                        <TextBox Name="Diagnos" Height="60" />
                    </DockPanel>
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Рекомендации" Width="120" Margin="0,0,5,0"/>
                        <TextBox Name="Recomendations" Height="60" />
                    </DockPanel>
                    
                    <ListView
                        Name="Spisok"
                        Height="100"
                        ItemsSource="{Binding ReceptionsList}" 
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Идентификатор Доктора: "/>
                                        <TextBlock Text="{Binding DoctorID}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Дата: "/>
                                        <TextBlock Text="{Binding Date}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Диагноз: "/>
                                        <TextBlock Text="{Binding Diagons}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Рекомендации: "/>
                                        <TextBlock Text="{Binding Recomendation}"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button Content="Добавить прием" Click="ButtonBase_OnClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
