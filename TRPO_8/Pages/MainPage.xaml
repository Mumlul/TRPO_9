<Page x:Class="TRPO_8.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MainPage"
      Background="#F8F8F8"
      >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Name="Info" Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Текущий доктор" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <DockPanel Margin="0,3">
                    <TextBlock Text="Фамилия:" Width="80" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding LastName}" TextWrapping="Wrap"/>
                </DockPanel>
                <DockPanel Margin="0,3">
                    <TextBlock Text="Имя:" Width="80" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Name}" TextWrapping="Wrap"/>
                </DockPanel>
                <DockPanel Margin="0,3">
                    <TextBlock Text="Отвество:" Width="80" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding MiddleName}" TextWrapping="Wrap"/>
                </DockPanel>
                <DockPanel Margin="0,3">
                    <TextBlock Text="Специальность:"  Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Specialisation}" TextWrapping="Wrap"/>
                </DockPanel>
            </StackPanel>
        </Border>

        <Border Name="ll" Grid.Row="1" Grid.ColumnSpan="3" Background="#F8F8F8" BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <ListView
                Height="300"
                ItemsSource="{Binding Patients}" 
                SelectedItem="{Binding SelectedPatient}"
                MouseDoubleClick="Add_Reception"
                >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Идентификатор: "/>
                                <TextBlock Text="{Binding ID}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ФИО: "/>
                                <TextBlock Text="{Binding FullName}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Дата рождения: "/>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        
        <Button Grid.Row="2"   Content="Добавить нового пациента" Click="ButtonBase_OnClick" Margin="10"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Изменить данные" Click="Change_data" Margin="10"/>



        <Border Grid.Row="4" Name="Statistic" Grid.Column="0" Grid.ColumnSpan="3" Background="#E8E8E8" BorderBrush="#CCCCCC" 
         BorderThickness="1"  VerticalAlignment="Bottom" Height="30">
            <DockPanel Margin="0,5">
                <TextBlock Text="Докторов в системе:" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding CountDoctors}"/>
                <TextBlock Text="Пациентов в системе:"/>
                <TextBlock Text="{Binding CountPatients}"/>
            </DockPanel>

        </Border>
    </Grid>
</Page>
