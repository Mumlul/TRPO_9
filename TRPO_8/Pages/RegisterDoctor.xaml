<Page x:Class="TRPO_8.Pages.RegisterDoctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterDoctor">

    <DockPanel>
        <Border BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,10" Padding="10" Grid.Row="1" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="Регистрация доктора" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <DockPanel Margin="0,5">
                    <TextBlock Text="Фамилия" Width="100" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding LastName}" Height="25"/>
                </DockPanel>
                <DockPanel Margin="0,5">
                    <TextBlock Text="Имя" Width="100" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding Name}" Height="25"/>
                </DockPanel>
                <DockPanel Margin="0,5">
                    <TextBlock Text="Отчество" Width="100" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding MiddleName}" Height="25"/>
                </DockPanel>
                <DockPanel Margin="0,5">
                    <TextBlock Text="Специальность" Width="100" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding Specialisation}" Height="25"/>
                </DockPanel>
                <DockPanel Margin="0,5">
                    <TextBlock Text="Пароль" Width="100" Margin="0,0,5,0"/>
                    <TextBox Text="{Binding Password}" Height="25"/>
                </DockPanel>
                <Button Content="Сохранить доктора" Click="Add_Doctor" Margin="0,10,0,0" Height="30"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Page>
