<Page x:Class="TRPO_8.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_8.Pages"
      mc:Ignorable="d" 
      Title="LoginPage"
      Background="{DynamicResource WindowBackgroundBrush}"
      >

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Авторизация доктора" Style="{StaticResource PrimaryTextBlock}"/>
            <DockPanel >
                <TextBlock Text="ID доктора"  Style="{StaticResource PrimaryTextBlock}"/>
                <TextBox Text="{Binding ID}" Style="{StaticResource PrimaryTextBox}"/>
            </DockPanel>
            <DockPanel >
                <TextBlock Text="Пароль" Style="{StaticResource PrimaryTextBlock}"/>
                <TextBox Text="{Binding Password}" Style="{StaticResource PrimaryTextBox}"/>
            </DockPanel>
            <Button Click="LoginDoctor_Click" Content="Войти" Style="{StaticResource StandardButton}"/>
            <TextBlock Text="Зарегистрироваться" MouseDown="Register" Style="{StaticResource SecondaryTextBlock}"/>
        </StackPanel>
    </Grid>
</Page>
