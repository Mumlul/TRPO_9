<Page x:Class="TRPO_8.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPO_8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <DockPanel>
        <StackPanel>
            <TextBlock Text="Авторизация доктора" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <DockPanel Margin="0,5">
                <TextBlock Text="ID доктора" Width="80" Margin="0,0,5,0"/>
                <TextBox Text="{Binding ID}" Height="25"/>
            </DockPanel>
            <DockPanel Margin="0,5">
                <TextBlock Text="Пароль" Width="80" Margin="0,0,5,0"/>
                <TextBox Text="{Binding Password}" Height="25"/>
            </DockPanel>
            <Button Click="LoginDoctor_Click" Content="Войти" Margin="0,10,0,0" Height="30"/>
            <TextBlock Text="Зарегистрироваться" MouseDown="Register"/>
        </StackPanel>
    </DockPanel>
</Page>
